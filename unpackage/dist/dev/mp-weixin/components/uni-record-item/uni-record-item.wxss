.uni-record-item {
  background-color: #fff;
  box-shadow: 0 8rpx 20rpx 0 rgba(0, 0, 0, 0.02);
  border-radius: 10rpx;
  padding: 10rpx 40rpx 30rpx;
  margin: 40rpx 0;
}
.uni-record-item .header {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 10rpx 0;
}
.uni-record-item .header .header-left {
  font-size: 24rpx;
  color: #999;
  line-height: 34rpx;
}
.uni-record-item .header .header-right {
  font-size: 30rpx;
  color: #EFB600;
  line-height: 42rpx;
}
.uni-record-item .body {
  margin: 24rpx 0 28rpx;
}
.uni-record-item .body .txt {
  font-size: 28rpx;
  line-height: 44rpx;
  word-break: break-all;
}
.uni-record-item .footer {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.uni-record-item .footer .footer-left {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  overflow: hidden;
}
.uni-record-item .footer .footer-right {
  width: 176rpx;
  height: 64rpx;
  background: #EFB600;
  box-shadow: 0 6rpx 12rpx 0 rgba(239, 182, 0, 0.2);
  border-radius: 32rpx;
  color: #fff;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}
.uni-record-item .footer .footer-right .btn {
  line-height: 40rpx;
  font-size: 28rpx;
}

